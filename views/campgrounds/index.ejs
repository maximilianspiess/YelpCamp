<% layout('layouts/boilerplate') %> 
<h1>Our Campgrounds</h1>
<a href="/campgrounds/new">Add new</a>
<ul>
    <% for (let campground of campgrounds){%>
        <div class="card m-3" >
            <div class="row">
                <div class="col-md-4">
                    <img src=" <%= campground.image %> " class="img-fluid" alt="camp_image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %> </h5>
                        <h6 class="card-title text-muted"><%= campground.location %> </h6>
                        <p class="card-text"><%= campground.description %> </p>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>  
</ul>
